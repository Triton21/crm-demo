            @font-face {
                font-family: 'Drug'; 
                src:    url({{asset('bundles/app/fonts/Drugs.otf')}}) format('opentype'); 
            }
            .myFont {
                font-family: 'Drug';
            }
            .centerTitle {
                font-size: 4em;
                color: white;
