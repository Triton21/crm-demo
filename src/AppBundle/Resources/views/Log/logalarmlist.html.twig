{% extends "AppBundle:Log:logbase.html.twig" %}
{% block title %}Welcome!{% endblock %}


{%block stylesheets %}




{%endblock%}

{%block content %} 
    <div class="container">








        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Alarm list</h3>
                </div>
                <div class="panel-body">
                    <div class="gi-1x">
                        <table class="table table-striped gi-5p">

                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Name</th>
                                    <th>CreatedAt</th>
                                    <th>Alarm</th>
                                    <th>Note</th>
                                    <th>Type</th>
                                    <th></th>
                                </tr>
                            </thead>
                            {% for all in thisalarm %}
                                <tr>
                                    <td style="width:10%">{{ all.user }}</td>
                                    <td style="width:10%">{{ all.cName }}</td>
                                    <td style="width:10%">{{ all.createdAt|date('d-m-Y H:i:s') }}</td>
                                    <td style="width:10%">{{ all.alarmAt|date('d-m-Y H:i:s') }}</td>
                                    <td style="width:30%">{{ all.note }}</td>
                                    {% if all.leadid != false %}
                                    <td style="width:10%">Lead alarm</td>
                                    {% endif %}
                                    {% if all.logid != false %}
                                    <td style="width:10%">Phone log alarm</td>
                                    {% endif %}
                                    {% if all.leadid != false %}
                                        <td style="width:10%"><a href="{{ path('lead_progresstest', { 'id': all.leadid})}}" class="btn btn-success btn-xs">Show patient</a></td>
                                    {% endif %}
                                    {% if all.logid != false %}
                                        <td style="width:10%"><a href="{{ path('log_progress', { 'id': all.logid})}}" class="btn btn-info btn-xs">Show phone log</a></td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </table>

                    </div>
                </div>
            </div>
        </div>





    </div>





{%endblock%}   



