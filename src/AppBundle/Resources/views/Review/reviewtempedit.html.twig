{% extends "AppBundle:Review:reviewbase.html.twig" %}




{%block content %}  
    <div class="container">



        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit confirmation template </h3>
                </div>
                <div class="panel-body">
                    <p>
                     <span style="font-weight: bold;">Please use this placeholders in the template:</span>
                     %username%, %name%, %cemail%
                    </p>

                    <p>
                        {{ form_start(form) }}</p>
                    <p>
                        {{ form_label(form.tempname) }}
                        {{ form_errors(form.tempname) }}
                        {{ form_widget(form.tempname) }}
                    </p>
                    <p>
                        {{ form_label(form.subject) }}
                        {{ form_errors(form.subject) }}
                        {{ form_widget(form.subject) }}
                    </p><p>

                        {{ form_errors(form.body) }}
                        {{ form_widget(form.body , { 'attr': { 
                            'style' : 'height:250px', 
                            'rows' : '50', 
                            'cols' : '1' }} ) }}
                    </p>
                    <div class="col-lg-12"><span style="font-weight: bold;">Attachments</span></div>
                    <br>
                    <br>
                    <br>
                    <div class="col-lg-12">
                        <div class="col-sm-5">
                            {% if oldattname1 != false %}
                                <span class="gi-7p glyphicon glyphicon-paperclip"></span>&nbsp;&nbsp;&nbsp;<a href="{{ asset('images/products/' ~ oldattname1) }}" target="_blank">{{oldattname1}}</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="{{ path('confirm_removeattach', { 'id': id, 'attid': 1, }) }}" class="btn-xs btn btn-danger">Remove</a>
                            {% endif %}
                        </div>
                        <div class="col-sm-4">
                            {{ form_errors(form.attach1) }}
                            {{ form_widget(form.attach1) }}
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="col-lg-12">
                        <div class="col-sm-5">
                            {% if oldattname2 != false %}
                                <span class="gi-7p glyphicon glyphicon-paperclip"></span>&nbsp;&nbsp;&nbsp;<a href="{{ asset('images/products/' ~ oldattname2) }}" target="_blank">{{oldattname2}}</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="{{ path('confirm_removeattach', { 'id': id, 'attid': 2, }) }}" class="btn-xs btn btn-danger">Remove</a>
                            {% endif %}
                        </div>
                        <div class="col-sm-4">
                            {{ form_errors(form.attach2) }}
                            {{ form_widget(form.attach2) }}
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="col-lg-12">
                        <div class="col-sm-5">
                            {% if oldattname3 != false %}
                                <span class="gi-7p glyphicon glyphicon-paperclip"></span>&nbsp;&nbsp;&nbsp;<a href="{{ asset('images/products/' ~ oldattname3) }}" target="_blank">{{oldattname3}}</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="{{ path('confirm_removeattach', { 'id': id, 'attid': 3, }) }}" class="btn-xs btn btn-danger">Remove</a>
                            {% endif %}
                        </div>
                        <div class="col-sm-4">
                            {{ form_errors(form.attach3) }}
                            {{ form_widget(form.attach3) }}
                        </div>
                    </div>
                    <br>
                    <br>


                    <p>
                        {{ form_end(form) }}</p>




                </div>
            </div>
        </div>              






    </div>

{%endblock%}   



