{% extends "AppBundle:Review:reviewbase.html.twig" %}




{%block content %}  
    <div class="container">

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Saved templates</h3>
                </div>
                <div class="panel-body">
                    <div class="gi-1x">
                        <table class="table table-striped gi-5p">

                            <thead>
                                <tr>
                                    <th>Template name</th>
                                    <th>Subject</th>
                                    <th>Created at</th>
                                    <th>Created by</th>
                                    <th>Edit</th>
                                    <th>Open</th>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </thead>
                            {% for all in rtemplist %}
                                <tr>
                                    <td style="width:20%">{{ all.tempname }}</td>
                                    <td style="width:35%">{{ all.subject }}</td>
                                    <td style="width:10%">{{ all.updatedAt|date('m-d-Y') }}</td>
                                    <td style="width:10%">{{all.username}}</td>
                                    <td style="width:5%"><a href="{{ path('review_templateedit', { 'id': all.id }) }}"><span class="glyphicon glyphicon-edit"></span></a></td>
                                    <td style="width:5%"><a href="{{ path('review_seetemplate', { 'id': all.id }) }}" target="_blank"><span class="glyphicon glyphicon-open"></span></a></td>
                                    <td style="width:10%"><a href="{{ path('review_templateduplicate', { 'id': all.id }) }}" class="btn btn-info btn-xs">Duplicate</a></td>
                                    <td style="width:15%">{% if all.username == name %}<a href="{{ path('review_templatedelete', { 'id': all.id }) }}" class="btn btn-danger btn-xs">Delete</a>{% endif %}</td>
                                {% endfor %}
                            </tr>
                        </table>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create new template </h3>
                </div>
                <div class="panel-body">
                    <p>
                     <span style="font-weight: bold;">Please use this placeholders in the template:</span>
                     %username%, %name%, %cemail%
                    </p>
                    
                    <p>
                        {{ form_start(form) }}</p>
                    <p>
                        {{ form_label(form.tempname) }}
                        {{ form_errors(form.tempname) }}
                        {{ form_widget(form.tempname) }}
                    </p>
                    <p>
                        {{ form_label(form.subject) }}
                        {{ form_errors(form.subject) }}
                        {{ form_widget(form.subject) }}
                    </p>
                    
                    <p>
                        
                        {{ form_errors(form.body) }}
                        {{ form_widget(form.body , { 'attr': { 
                            'style' : 'height:250px', 
                            'rows' : '30', 
                            'cols' : '1' }} ) }}
                    </p>
                     <p>
                        {{ form_end(form) }}</p>
                    
                    


                </div>
            </div>
        </div> 
                      






    </div>

{%endblock%}   



