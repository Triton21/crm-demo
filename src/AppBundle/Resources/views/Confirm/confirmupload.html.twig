{% extends "AppBundle:Confirm:confirmbase.html.twig" %}
{% block title %}Welcome!{% endblock %}




{%block content %}  
    <div class="container">

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Uploaded files</h3>
                </div>
                <div class="panel-body">
                    <div class="gi-1x">
                        <table class="table table-striped gi-5p">

                            <thead>
                                <tr>
                                    <th>File name</th>
                                    <th>Uploaded</th>
                                    <th></th>
                                    <th></th>

                                </tr>
                            </thead>
                            {% if uploads == false %}
                                <tr>
                                    <td>There are no uploaded attachments</td>
                                    <td></td>
                                    <td></td>
                                    </tr>
                                    {% endif %}
                            {% for all in uploads %}
                                <tr>
                                    <td>{{ all.imageName }}</td>
                                    <td>{{ all.updatedAt|date('m-d-Y') }}</td>
                                    <td><a href="{{ asset('images/products/' ~ all.imageName) }}" target="_blank">PDF</a></td>
                                    <td>{% if is_granted('ROLE_ADMIN') %}<a href="{{ path('confirmupload_delete', { 'id': all.id }) }}" class="btn btn-danger btn-sm">Delete</a>{% endif %}</td>
                                    </tr>
                                {% endfor %}
                            
                        </table>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Upload attachment</h3>
                </div>
                <div class="panel-body">

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}


                </div>
            </div>
        </div>              






    </div>

{%endblock%}   



