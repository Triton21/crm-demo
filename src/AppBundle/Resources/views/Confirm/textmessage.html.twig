{% extends "AppBundle:Confirm:confirmbase.html.twig" %}
{% block title %}Send text message{% endblock %}

{%block stylesheets %}
    <style>
        .pagination {
            margin-top: 0px;
            margin-bottom: 0px;
            margin-left: auto;
            margin-right: auto;
        }
        .marginFix {
            margin-bottom:-20px;
            padding-bottom: -20px;
        }



    </style>

{%endblock%}


{%block content %}  
    <div class="container">

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Send text message</h3>
                </div>
                <div class="panel-body gi-1x">
                    <div class="col-lg-8">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <div class="text-center">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" {% if pager.pagedown != false %} href="{{ path('confirm_sms', { 'page': pager.pagedown })}}" {% endif %}><span class="gi-5p glyphicon glyphicon-chevron-left"></span></a></li>
                            {% for all in pager.pagesarray %}<li class="page-item"><a class="page-link" {% if pager.page != all %} href="{{ path('confirm_sms', { 'page': all })}}" {% endif %}>{{all}}</a></li>{% endfor %}
                            <li class="page-item"><a class="page-link" {%if pager.pageup != false%} href="{{ path('confirm_sms', { 'page': pager.pageup })}}" {% endif %}><span class="gi-5p glyphicon glyphicon-chevron-right"></span></a></li>
                        </ul>
                        <h4 class="panel-title pull-left" style="padding-top: 7.5px;">Sent text messages</h4>

                        <div class="col-lg-3 pull-right marginFix">
                            {{ form_start(formSearch) }}
                            <div class="col-lg-8 marginFix">
                                <div class="form-group has-feedback">
                                    {{ form_errors(formSearch.search) }}
                                    {{ form_widget(formSearch.search) }} 
                                    <i class="glyphicon glyphicon-search form-control-feedback"></i>
                                </div>
                            </div>
                            <div class="col-lg-4 marginFix">
                                {{ form_end(formSearch) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="panel-body">
                    <table class="table table-striped gi-5p">

                        <thead>
                            <tr>
                                <th>From</th>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Message</th>
                            </tr>
                        </thead>
                        {% for all in sentText %}
                            <tr>
                                <td style="width:20%">{{all.fromNumber}}</td>
                                <td style="width:10%"><a href="{{path('lead_progresstest', { 'id': all.leadId})}}">{{all.clientName}}</a></td>
                                <td style="width:10%">{{ all.createdAt|date('m-d-Y') }}</td>
                                <td style="width:60%">{{all.body}}</td>
                            </tr>
                        {% endfor %}
                    </table>




                </div>
            </div>
        </div>
    </div> 





{%endblock%}   



{% block javascripts %}{% endblock %}

