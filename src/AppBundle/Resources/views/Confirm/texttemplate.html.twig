{% extends "AppBundle:Confirm:confirmbase.html.twig" %}
{% block title %}Welcome!{% endblock %}




{%block content %}  
    <div class="container">

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Saved templates</h3>
                </div>
                <div class="panel-body">
                    <div class="gi-1x">
                        <table class="table table-striped gi-5p">

                            <thead>
                                <tr>
                                    <th>Template name</th>
                                    <th>Created at</th>
                                    <th>Created by</th>
                                    <th>Message</th>
                                    <th>Edit</th>
                                    <th></th>
                                </tr>
                            </thead>
                            {% for all in textTemplateList %}
                                <tr>
                                    <td style="width:10%">{{ all.templateName }}</td>
                                    <td style="width:10%">{{ all.createdAt|date('m-d-Y') }}</td>
                                    <td style="width:10%">{{all.username}}</td>
                                    <td style="width:45%">{{all.textBody}}</td>
                                    <td style="width:5%"><a href="{{ path('confirm_texttemplate_edit', { 'id': all.id }) }}"><span class="glyphicon glyphicon-edit"></span></a></td>
                                    <td style="width:15%">{% if is_granted('ROLE_ADMIN') %}<a href="{{ path('confirm_texttemplate_delete', { 'id': all.id }) }}" class="btn btn-danger btn-xs">Delete</a>{% endif %}</td>
                                {% endfor %}
                            </tr>
                        </table>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create new template </h3>
                </div>
                <br>
                <div class="container">Use this placeholder: %firstname%, %name% </div>
                <div class="panel-body">
                    
                    <p>
                        {{ form_start(form) }}</p>
                    <p>
                        {{ form_label(form.templateName) }}
                        {{ form_errors(form.templateName) }}
                        {{ form_widget(form.templateName) }}
                    </p>
                    <p>
                        
                        {{ form_errors(form.textBody) }}
                        {{ form_widget(form.textBody , { 'attr': { 
                            'style' : 'height:250px', 
                            'rows' : '30', 
                            'cols' : '1' }} ) }}
                    </p>
                     <p>
                        {{ form_end(form) }}</p>
                    
                    


                </div>
            </div>
        </div> 
                      






    </div>

{%endblock%}   



