{% extends "AppBundle:Confirm:confirmbase.html.twig" %}
{% block title %}Welcome!{% endblock %}




{%block content %}  
    <div class="container">


        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit template </h3>
                </div>
                <div class="panel-body">
                    
                    <p>
                        {{ form_start(form) }}</p>
                    <p>
                        {{ form_label(form.templateName) }}
                        {{ form_errors(form.templateName) }}
                        {{ form_widget(form.templateName) }}
                    </p>
                    <p>
                        
                        {{ form_errors(form.textBody) }}
                        {{ form_widget(form.textBody , { 'attr': { 
                            'style' : 'height:250px', 
                            'rows' : '30', 
                            'cols' : '1' }} ) }}
                    </p>
                     <p>
                        {{ form_end(form) }}</p>
                    
                    


                </div>
            </div>
        </div> 
                      






    </div>

{%endblock%}   



