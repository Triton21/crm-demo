{% extends "AppBundle:Marketing:marketingbase.html.twig" %}
{% block title %}Welcome!{% endblock %}

{%block welcome%}Welcome {{name}}{%endblock%}



{%block content %}  
    <div class="container">

        
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit template </h3>
                </div>
                <div class="panel-body">
                    <p>
                     <span style="font-weight: bold;">Note:</span> You can use %firstname% and %consdate% as a placeholder in the text. %firstname% will be replaced with the real Firstname. If you insert %consdate% in the text than you can easily choose the next available consultation date during the email createtion.  
                    </p>
                    
                    <p>
                        {{ form_start(form) }}</p>
                    <p>
                        {{ form_label(form.tempname) }}
                        {{ form_errors(form.tempname) }}
                        {{ form_widget(form.tempname) }}
                    </p>
                    <p>
                        {{ form_label(form.subject) }}
                        {{ form_errors(form.subject) }}
                        {{ form_widget(form.subject) }}
                    </p><p>
                        
                        {{ form_errors(form.body) }}
                        {{ form_widget(form.body , { 'attr': { 
                            'style' : 'height:250px', 
                            'rows' : '120', 
                            'cols' : '1' }} ) }}
                    </p>
                     <p>
                        {{ form_end(form) }}</p>
                    
                    


                </div>
            </div>
        </div>              






    </div>

{%endblock%}   



