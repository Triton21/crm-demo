{% extends "AppBundle:Mainemail:emailbase.html.twig" %}
{% block title %}Welcome!{% endblock %}

{%block stylesheets %}

{%endblock%}

{%block content %}  
    <div class="container">
        <div class="col-lg-12">
            <div class="col-lg-offset-3 col-lg-5">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Signature for {{name}}</h3>
                    </div>
                    <div class="panel-body">

                        <table class="table table-striped gi-1x">
                            <thead>
                                <tr>
                                    <th>Account</th>
                                    <th>Open / Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for key, all in signaturelist %}
                                    <tr>
                                        <td style="width:40%">{{key}}</td>
                                        <td style="width:30%"><a href="{{ path('mainemail_signatureedit', { 'id': all.id }) }}"><span class="glyphicon glyphicon-edit"></span></a></td>
                                        <td style="width:30%">{% if all.username == name %}<a href="{{ path('mainemail_signaturedelete', { 'id': all.id }) }}" class="btn btn-danger btn-xs">Delete</a>{% endif %}</td>

                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Create new signature </h3>
                </div>
                <div class="panel-body">
                    <p>
                        {{ form_start(form) }}</p>
                    <div class="col-lg-offset-3 col-lg-5">
                        {{ form_label(form.settid) }}
                        {{ form_errors(form.settid) }}
                        {{ form_widget(form.settid) }}
                        <br>
                    </div>
                    <div class="col-lg-12">
                        <p>
                            {{ form_errors(form.texthtml) }}
                            {{ form_widget(form.texthtml , { 'attr': { 
                            'style' : 'height:250px', 
                            'rows' : '30', 
                            'cols' : '1' }} ) }}
                        </p>
                        <p>
                            {{ form_end(form) }}</p>
                    </div>



                </div>


            </div>      











        </div>
    </div>

{%endblock%}   



{% block javascripts %}{% endblock %}