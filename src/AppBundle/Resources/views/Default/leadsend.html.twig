{% extends "AppBundle:Default:lead.html.twig" %}
{% block title %}Welcome!{% endblock %}
{%block stylesheets %}
{% endblock %}

{% block content %} 

    <!-- this lead -->


    <div class="col-lg-12">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Lead details</h3>
            </div>


            <div class="panel-body">



                <div class="panel panel-default">
                    <table class="table table-striped gi-4p">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th></th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Message</th>
                                <th>Date/Time</th>
                                <th>Coordinator</th>
                                <th>Status</th>
                                <th>Flag</th>

                                <th></th>

                            </tr>
                        </thead>

                        <tr class="table table-striped gi-5p">
                            <td style="width:8%"><a href="{{ path('lead_progress', { 'id': thislead.id})}}">{{ thislead.customerName }}</a></td>
                            <td style="width:2%; text-align: right;">{% if thislead.reminder == true %}<span class="gi-8p glyphicon glyphicon-time" style="color:red"></span>{%endif%}</td>
                            <td style="width:8%">{{ thislead.customerTel }}</td>
                            <td style="width:16%">{{ thislead.customerEmail }}</td>
                            <td style="width:37%">{{ thislead.message }}</td>
                            <td style="width:8%">{{ thislead.createdAt|date('d-m-Y H:i:s') }}</td>
                            <td style="width:6%">{{ thislead.assign }}</td>
                            <td style="width:6%">{{ thislead.status }}</td>
                            <td style="width:6%">{% if thislead.flag == '1' %}<span class="gi-8p glyphicon glyphicon-flag" style="color:red"></span>{%endif%}</td>

                            <td style="width:8%; text-align: center;"><a href="{{ path('lead_progress', { 'id': thislead.id})}}">Edit</a></td>


                        </tr>
                    </table>

                </div>




            </div>
        </div>
    </div>
    
        <div class="col-lg-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Create an email template to this lead</h3>
                </div>




                <div class="panel-body">
                    {{ form_start(formsend) }}
                    {{ form_widget(formsend) }}
                    {{ form_end(formsend) }}
                </div>
            </div>
                {% if sent == true %}        

                    <div class="panel panel-success">
                        <div class="panel-heading">
                            <h3 class="panel-title">Email succes!</h3>
                        </div>

                    </div>
                {% endif %}   
                
        </div>

        
            


{% endblock %}
{% block javascripts %}
    {% endblock %}