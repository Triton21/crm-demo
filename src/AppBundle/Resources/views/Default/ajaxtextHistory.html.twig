<div class="container-fluid">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-condensed gi-5p" style="margin-bottom: 0px;">
                        <thead>
                            <tr>
                                <th>From</th>
                                <th>Date</th>
                                <th>Message</th>
                            </tr>
                        </thead>
                        {% for all in receivedText %}
                            <tr>
                                <td style="width:15%">{{all.fromNumber}}</td>
                                <td style="width:15%">{{ all.createdAt|date('d-m-Y H:i:s') }}</td>
                                <td style="width:70%">{% if all.messageType == 1 %} <div class="alert alert-success" role="alert" style="margin-bottom: 0px;">{{all.body}}</div>{% else %}<div class="alert alert-info" role="alert"role="alert" style="margin-bottom: 0px;">{{all.body}}</div>{% endif %}         </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>