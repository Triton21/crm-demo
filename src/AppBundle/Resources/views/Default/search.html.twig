{% extends "AppBundle:Default:lead.html.twig" %}
{% block title %}Welcome!{% endblock %}

{%block welcome%}Welcome {{name}}<span>&nbsp;&nbsp;</span><span class="badgegreen">{{countlead.1}}</span><span>&nbsp;&nbsp;</span><span class="badgered">{{countlead.4}}</span>{%endblock%}

{% block content %} 

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Search</h3>
                </div>
                <div class="panel-body">
                    <div class="gi-1x">

                        <div class="panel-body">
                            {{ form_start(form2) }}

                            <div class="col-xs-3">
                                {{ form_label(form2.name) }}
                                {{ form_errors(form2.name) }}
                                {{ form_widget(form2.name) }}
                            </div>
                            <div class="col-xs-3">
                                {{ form_label(form2.email) }}
                                {{ form_errors(form2.email) }}
                                {{ form_widget(form2.email) }}
                            </div>
                            <div class="col-xs-3">
                                {{ form_label(form2.tel) }}
                                {{ form_errors(form2.tel) }}
                                {{ form_widget(form2.tel) }}
                            </div>
                            <div class="col-xs-2">
                                <div class="row">&nbsp;</div>
                                <div class="row">
                                    {{ form_widget(form2.search) }}
                                </div>
                            </div> 

                            {{ form_end(form2) }}


                        </div>
                            <div style="position:relative;text-align:center;"><a href="{{path('lead_search')}}"><button type="button" class="btn btn-sm btn-info">Clear result</button></a></div>


                    </div>
                </div>
            </div>


            <!-- SEARCH RESULT FOR NAME -->
            {% if namesearch == true %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Search result for name</h3>
                    </div>
                    <div class="panel-body">
                        <div class="gi-1x">
                            <table class="table table-striped gi-4p">

                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>Message</th>
                                        <th>Date</th>
                                        <th>PC</th>
                                        <th>Assign</th>
                                        <th>Status</th>


                                    </tr>
                                </thead>
                                {% for all in namesearch %}
                                    <tr>
                                        <td><a href="{{ path('lead_progress', { 'id': all.id})}}">{{ all.customerName }}</a></td>
                                        <td>{{ all.customerTel }}</td>
                                        <td>{{ all.customerEmail }}</td>
                                        <td>{{ all.message }}</td>
                                        <td>{{ all.createdAt|date('d-m-Y') }}</td>
                                        <td>{{ all.assign }}</td>
                                        <td></td>
                                        <td>{{ all.status }}</td>
                                        <td></td>
