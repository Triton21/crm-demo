                                        $.ajax({
                                            url: "{{ path('lead_ajaxupdatecontacted', { 'id': all.id})}}",
                                            dataType: "json",
                                            success: function (response) {
                                                var updateCont = document.getElementById("contacted{{all.id}}");
                                                updateCont.innerHTML = response;
                                            }
                                        });
                                    }

