                                                    <li>
                                                        <article class="more{{all.id}}">{{ all.message }}</article>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="col-xs-05">
                                                <ul style="text-align: right; font-weight: bold;">
                                                    <li>
                                                        Flag:
                                                    </li>
                                                    <li>
                                                        Source:
                                                    </li>
                                                </ul>
                                            </div>

